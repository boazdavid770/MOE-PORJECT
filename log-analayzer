#!/bin/bash

# הגדרת נתיב קובץ הלוג
LOG_FILE="/var/log/syslog"

# בדיקה אם קובץ הלוג קיים
if [[ ! -f "$LOG_FILE" ]]; then
    echo "שגיאה: קובץ הלוג '$LOG_FILE' לא נמצא."
    exit 1
fi

echo "קורא את התוכן של '$LOG_FILE':"
echo "-------------------------------------"

# הצגת 10 השורות האחרונות של קובץ הלוג
# לרוב, זה הדבר השימושי ביותר כשמסתכלים על קבצי לוג.
tail "$LOG_FILE"

# אם תרצה להציג את כל הקובץ (זהירות, אם הקובץ גדול מאוד זה יכול להיות ארוך):
# cat "$LOG_FILE"

# אם תרצה לעקוב אחרי עדכונים בזמן אמת (הסקריפט ימשיך לרוץ ויציג שורות חדשות):
# echo ""
# echo "לחץ Ctrl+C כדי להפסיק את המעקב."
# tail -f "$LOG_FILE"

echo "-------------------------------------"
echo "סיים לקרוא את קובץ הלוג."
